{
  "mcpServers": {
    "n8n-builder": {
      "type": "sse",
      "command": "bash",
      "args": [
        "-ic",
        "source ~/.bashrc && npx -y mcp-n8n-builder"
      ],
      "env": {
        "N8N_API_URL": "http://localhost:5678",
        "N8N_API_KEY": "${N8N_API_KEY}"
      }
    }
  }
}
